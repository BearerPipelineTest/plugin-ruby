#!/usr/bin/env ruby

require_relative '../src/ruby/parser'

source =
  if !ARGV[0]
    File.read('test.rb')
  elsif File.file?(ARGV[0])
    File.read(ARGV[0])
  else
    ARGV[0].gsub('\\n', "\n")
  end

parsed = Prettier::Parser.new(source).parse

puts '=== SOURCE === '
puts source

puts "\n=== COMMENTS ==="
pp parsed.comments

puts "\n=== S-EXPS ==="
pp parsed
