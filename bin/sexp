#!/usr/bin/env ruby

require_relative '../src/ruby/parser'
require 'pp'

PP.prepend(
  Module.new do
    def pp_hash(obj)
      group(1, '{', '}') do
        text obj[:type]
        text "<L#{obj[:start]}-#{obj[:end]},"
        text "C#{obj[:char_start]}-#{obj[:char_end]}>"

        group(1) do
          breakable ' '
          pp obj[:body]
        end
      end
    end
  end
)

source = File.file?(ARGV[0]) ? File.read(ARGV[0]) : ARGV[0].gsub('\\n', "\n")
parsed = Prettier::Parser.new(source).parse

puts '=== SOURCE === '
puts source

puts "\n=== COMMENTS ==="
puts parsed[:comments]

puts "\n=== S-EXPS ==="
pp parsed
