#!/usr/bin/env ruby

require File.expand_path(File.join('..', 'src', 'parser.rb'), __dir__)

require 'pp'

PP.prepend(
  Module.new do
    def pp_hash(obj)
      group(1, '{', '}') do
        text obj[:type]
        text "<L#{obj[:start]}-#{obj[:end]},"
        text "C#{obj[:char_start]}-#{obj[:char_end]}>"

        group(1) do
          breakable ' '
          pp obj[:body]
        end
      end
    end
  end
)

class Prettier::Parser::BodyStmt
  def pretty_print(pp)
    pp.pp_hash(self)
  end
end

class Prettier::Parser::Rescue
  def pretty_print(pp)
    pp.pp_hash(self)
  end
end

class Prettier::Parser::Stmts
  def pretty_print(pp)
    pp.pp_hash(self)
  end
end

source = File.file?(ARGV[0]) ? File.read(ARGV[0]) : ARGV[0].gsub('\\n', "\n")
parsed = Prettier::Parser.new(source).parse

puts '=== SOURCE === '
puts source

puts "\n=== COMMENTS ==="
puts parsed[:comments]

puts "\n=== S-EXPS ==="
pp parsed
